#include <iostream>
using namespace std;

int main() {
    char b[3][3];
    char player = 'X';
    int move, row, col;
    int count = 0;
    bool win = false;

    // Initialize board
    char ch = '1';
    for(int i = 0; i < 3; i++)
        for(int j = 0; j < 3; j++)
            b[i][j] = ch++;

    while(count < 9 && !win) {

        // Display board
        cout << "\n";
        for(int i = 0; i < 3; i++) {
            for(int j = 0; j < 3; j++)
                cout << b[i][j] << " ";
            cout << endl;
        }

        cout << "Player " << player << " enter position: ";
        cin >> move;

        row = (move - 1) / 3;
        col = (move - 1) % 3;

        if(b[row][col] != 'X' && b[row][col] != 'O') {
            b[row][col] = player;
            count++;

            // Check rows & columns
            for(int i = 0; i < 3; i++) {
                if(b[i][0]==b[i][1] && b[i][1]==b[i][2])
                    win = true;
                if(b[0][i]==b[1][i] && b[1][i]==b[2][i])
                    win = true;
            }

            // Check diagonals
            if(b[0][0]==b[1][1] && b[1][1]==b[2][2])
                win = true;
            if(b[0][2]==b[1][1] && b[1][1]==b[2][0])
                win = true;

            if(win) {
                cout << "Player " << player << " Wins!";
                break;
            }

            // Switch player
            if(player == 'X')
                player = 'O';
            else
                player = 'X';
        }
        else {
            cout << "Invalid move!\n";
        }
    }

    if(!win)
        cout << "Game Draw!";

    return 0;
}
